<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.echo.web.mapper.OnlineExaminationMapper" >
  <resultMap id="BaseResultMap" type="com.echo.web.model.OnlineExamination" >
    <result column="student_id" property="studentId" jdbcType="INTEGER" />
    <result column="paper_id" property="paperId" jdbcType="INTEGER" />
    <result column="question_id" property="questionId" jdbcType="INTEGER" />
    <result column="examintion_result" property="examintionResult" jdbcType="INTEGER" />
    <result column="examintion_answer" property="examintionAnswer" jdbcType="VARCHAR" />
    <result column="examintion_score" property="examintionScore" jdbcType="INTEGER" />
    <result column="exam_flag" property="examFlag" jdbcType="INTEGER" />
  </resultMap>
  <resultMap id="ResultMapWithBLOBs" type="com.echo.web.model.OnlineExamination" extends="BaseResultMap" >
    <result column="examintion_answer" property="examintionAnswer" jdbcType="LONGVARCHAR" />
  </resultMap>
  <sql id="Blob_Column_List" >
    examintion_answer
  </sql>
  <insert id="insert" parameterType="com.echo.web.model.OnlineExamination" >
    insert into online_examination (student_id, paper_id, question_id, 
      examintion_result, examintion_score, examintion_answer
      )
    values (#{studentId,jdbcType=INTEGER}, #{paperId,jdbcType=INTEGER}, #{questionId,jdbcType=INTEGER}, 
      #{examintionResult,jdbcType=INTEGER}, #{examintionScore,jdbcType=INTEGER}, #{examintionAnswer,jdbcType=LONGVARCHAR}
      )
  </insert>
  <insert id="insertSelective" parameterType="com.echo.web.model.OnlineExamination" >
    insert into online_examination
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="studentId != null" >
        student_id,
      </if>
      <if test="paperId != null" >
        paper_id,
      </if>
      <if test="questionId != null" >
        question_id,
      </if>
      <if test="examintionResult != null" >
        examintion_result,
      </if>
      <if test="examintionScore != null" >
        examintion_score,
      </if>
      <if test="examintionAnswer != null" >
        examintion_answer,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
      <if test="studentId != null" >
        #{studentId,jdbcType=INTEGER},
      </if>
      <if test="paperId != null" >
        #{paperId,jdbcType=INTEGER},
      </if>
      <if test="questionId != null" >
        #{questionId,jdbcType=INTEGER},
      </if>
      <if test="examintionResult != null" >
        #{examintionResult,jdbcType=INTEGER},
      </if>
      <if test="examintionScore != null" >
        #{examintionScore,jdbcType=INTEGER},
      </if>
      <if test="examintionAnswer != null" >
        #{examintionAnswer,jdbcType=LONGVARCHAR},
      </if>
    </trim>
    
    
  </insert>
  <select id="selcetBystudentandPaperandQues" resultType="java.lang.Integer" parameterType="java.lang.Integer">
  select count(1) from online_examination where 
   student_id = #{studentId} and paper_id = #{paperId,jdbcType=INTEGER} and question_id = #{questionId,jdbcType=INTEGER}
  </select>
  
  
  <update id="updatepaper" parameterType="com.echo.web.model.OnlineExamination">
  update online_examination
  
    set examintion_answer = #{examintionAnswer,jdbcType=LONGVARCHAR}
   
    where  student_id = #{studentId,jdbcType=INTEGER} and paper_id = #{paperId,jdbcType=INTEGER} and question_id =  #{questionId,jdbcType=INTEGER}
  
  </update>
  
  <!-- 查询所有考试的试卷  -->
  <select id="selectAll" resultMap="BaseResultMap">
  
  SELECT * FROM `online_examination`  GROUP BY `paper_id`
  
  </select>
  
  <!-- 查询对应学生的试卷 -->
  <select id="selectAllBypaperId" resultMap="BaseResultMap">
  
  SELECT * FROM `online_examination`  
WHERE `student_id` = #{0}
  
  </select>
  
</mapper>